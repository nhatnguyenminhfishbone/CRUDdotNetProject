@model tblFileAndFolder
@{
    ViewData["Title"] = "FileAndFolder";
}
<section>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-2 float-right" asp-area="" asp-controller="FileAndFolder" asp-action="AllFileAndFolder">All FileAndFolders</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>FileAndFolder Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">File name</p>
                            </div>
                            <div class="col-sm-9">
                                <h2 class="text-muted mb-0">@Model.Name</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Modified By</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.ModifiedBy</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Modified time</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Modified</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            <a asp-action="Edit" asp-controller="FileAndFolder" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>