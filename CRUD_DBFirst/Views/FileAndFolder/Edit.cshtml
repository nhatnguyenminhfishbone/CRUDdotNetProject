@model tblFileAndFolder
@{
    ViewData["Title"] = "FileAndFolder";
}
<style>
    img {
        height: 71px;
        width: 71px;
        padding: 5px;
    }

    .card-header {
        background-color: #b8daff;
    }
</style>
<section>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-2 float-right" asp-area="" asp-controller="FileAndFolder" asp-action="AllFileAndFolder">All FileAndFolders</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Edit FileAndFolder</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="FileAndFolder" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    @if (ViewBag.msg != null)
                    {
                        <div class="row bg-success">
                            <div class="col-lg-12 text-center">
                                <span class="text-light">@ViewBag.msg</span>
                                <span class="text-light float-right">x</span>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="Name"></label>
                            <input type="text" class="form-control" id="txtName" asp-for="Name">
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="Modified"></label>
                            <input type="text" class="form-control" id="txtModified" asp-for="Modified" placeholder="">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <label asp-for="ModifiedBy"></label>
                            <input type="text" class="form-control" id="txtModifiedBy" asp-for="ModifiedBy">
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="File"></label>
                            <input type="file" class="form-control" id="txtPhoto" asp-for="File">
                        </div>
                        <div class="col-lg-2">
                            <input type="hidden" asp-for="PhotoPath" value="@Model.PhotoPath" />
                            <img src="~/ProfileImage/@Model.PhotoPath" alt="" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-primary float-right" value="Save" />
                        </div>

                    </div>
                </div>
            </form>
        </div>

    </div>

</section>