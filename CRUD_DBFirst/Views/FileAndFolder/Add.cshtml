@model CRUD_DBFirst.Models.tblFileAndFolder
@{
    ViewData["Title"] = "FileAndFolder";
}
<style>
    .card-header {
        background-color: #b8daff;
    }
</style>
<section>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-2 float-right" asp-area="" asp-controller="FileAndFolder" asp-action="AllFileAndFolder">All FileAndFolders</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>File Upload Form</h2>
        </div>
        <div class="card-body">
            <form asp-action="Add" asp-controller="FileAndFolder" method="post" enctype="multipart/form-data" autocomplete="off">
                <div class="form-group">
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <label asp-for="ModifiedBy"></label>
                            <input type="text" class="form-control" id="txtModifiedBy" asp-for="ModifiedBy">
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="File"></label>
                            <input type="file" class="form-control" id="File" asp-for="File">
                        </div>

                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-primary float-right" value="Submit" />
                            <input type="reset" class="btn btn-default float-right" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

</section>